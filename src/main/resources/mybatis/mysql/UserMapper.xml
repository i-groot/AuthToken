<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangxing.ssm.tokenhelper.dao.mapper.UserMapper">

    <resultMap id="userMap" type="com.zhangxing.ssm.tokenhelper.model.User">
        <result property="id" column="ID"></result>
        <result property="name" column="NAME"></result>
        <result property="password" column="PASSWORD"></result>
    </resultMap>

    <insert id="addUser" parameterType="com.zhangxing.ssm.tokenhelper.model.User">
        INSERT INTO
        USER ('ID', 'NAME', 'PASSWORD')
        VALUES (#{id},#{name},#{password})
    </insert>

    <select id="login" parameterType="com.zhangxing.ssm.tokenhelper.model.User" resultMap="userMap">
        SELECT ID, NAME
        FROM USER
        WHERE NAME = #{name} AND PASSWORD = #{password}
    </select>

</mapper>